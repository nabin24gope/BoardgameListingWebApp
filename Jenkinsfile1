pipeline {
    agent any
    
    tools {
        maven 'maven3'
        jdk 'jdk17'
    }


    
    environment {
        SCANNER_HOME= tool 'sonar-scanner'
    }

    stages {        
        stage('Compile') {
            steps {
                sh "mvn compile"
            }
        }
        
        stage('Test') {
            steps {
                sh "mvn test"
            }
        }
        stage('SonarQube') {
            steps {
                withSonarQubeEnv('sonar-1') {
                    sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=Boardgame -Dsonar.projectKey=Boardgame -Dsonar.java.binaries=target/classes '''
                }
            }
        }
        

        stage('Build') {
            steps {
                sh "mvn package"
            }
        }
    }
}
